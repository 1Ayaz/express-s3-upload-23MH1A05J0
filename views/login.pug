doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Login - File Upload System
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
        background: #121212;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .container {
        background: #1e1e1e;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        width: 100%;
        max-width: 400px;
        border: 1px solid #333;
      }
      h1 {
        text-align: center;
        color: #ff8c00;
        margin-bottom: 30px;
        font-weight: bold;
      }
      .form-group {
        margin-bottom: 20px;
      }
      label {
        display: block;
        margin-bottom: 8px;
        color: #ddd;
        font-weight: bold;
      }
      input[type="text"],
      input[type="password"] {
        width: 100%;
        padding: 12px;
        background: #2a2a2a;
        border: 1px solid #444;
        border-radius: 6px;
        font-size: 14px;
        color: white;
      }
      input[type="text"]:focus,
      input[type="password"]:focus {
        outline: none;
        border-color: #ff8c00;
      }
      button {
        width: 100%;
        padding: 12px;
        background: #ff8c00;
        color: black;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s, background 0.3s;
      }
      button:hover {
        background: #ffa500;
        transform: translateY(-2px);
      }
      .error {
        background: rgba(255, 68, 68, 0.1);
        color: #ff4444;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 20px;
        text-align: center;
        border: 1px solid #ff4444;
      }
  body
    .container
      h1 File Upload System
      if error
        .error= error
      form(method='POST', action='/login')
        .form-group
          label(for='username') Username
          input(type='text', id='username', name='username', required)
        .form-group
          label(for='password') Password
          input(type='password', id='password', name='password', required)
        button(type='submit') Login
